---
// ─── LBK Launcher Section ──────────────────────────────────────
// Download section for the LBK Launcher app

const features = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />`,
    title: "Автоматична установка",
    description: "Один клік — і переклад встановлено. Не потрібно нічого робити вручну."
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />`,
    title: "Автооновлення",
    description: "Лаунчер сам перевіряє нові версії та сповіщає, коли вийде оновлення."
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />`,
    title: "Всі переклади в одному місці",
    description: "Усі локалізації від різних авторів зібрані в одному зручному менеджері."
  }
];
---

<section id="launcher" class="py-20 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] rounded-full opacity-[0.05]
                bg-[radial-gradient(ellipse,_#6d5dfc_0%,_transparent_70%)]" />
  </div>

  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

      <!-- Left: Text content -->
      <div data-animate>
        <div class="inline-flex items-center gap-2 px-3 py-1.5 mb-6 rounded-full
                    bg-accent/10 border border-accent/20">
          <span class="relative flex h-1.5 w-1.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
            <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-accent"></span>
          </span>
          <span class="text-[11px] font-semibold text-accent-light tracking-wide uppercase">
            Безкоштовно
          </span>
        </div>

        <h2 class="text-3xl sm:text-4xl font-extrabold text-white mb-4 leading-tight">
          Завантажити<br />LBK Launcher
        </h2>
        <p class="text-surface-300 text-base leading-relaxed mb-8">
          LBK Launcher — це менеджер українських локалізацій ігор. Знаходьте, встановлюйте та оновлюйте переклади в кілька кліків, не копаючись у файлах гри вручну.
        </p>

        <a
          href="https://lbklauncher.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 text-base font-bold rounded-xl
                 bg-accent text-white border border-accent/50
                 hover:bg-accent/90 hover:shadow-lg hover:shadow-accent/25
                 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 group-hover:translate-y-0.5 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Завантажити Launcher
        </a>

        <p class="text-xs text-surface-400 mt-3">
          Windows, macOS, Linux · Безкоштовно
        </p>
      </div>

      <!-- Right: Feature cards -->
      <div class="space-y-4" data-animate-stagger>
        {features.map((feature) => (
          <div class="flex gap-4 p-5 rounded-xl bg-white/[0.03] border border-white/[0.06]
                      hover:bg-white/[0.05] hover:border-white/[0.10] transition-all duration-300">
            <div class="shrink-0 w-10 h-10 rounded-lg bg-accent/15 border border-accent/25
                        flex items-center justify-center">
              <svg class="w-5 h-5 text-accent-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                   set:html={feature.icon} />
            </div>
            <div>
              <h3 class="text-sm font-bold text-white mb-1">{feature.title}</h3>
              <p class="text-sm text-surface-300 leading-relaxed">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>

    </div>
  </div>
</section>
