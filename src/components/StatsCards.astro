---
// ─── StatsCards Component ──────────────────────────────────────────
// Statistics cards showing overall translation metrics

import { games } from "../data/games";

// Calculate total stats
const totalStats = games.reduce(
  (acc, game) => {
    if (game.stats) {
      acc.lines += game.stats.translatedLines || 0;
      acc.words += game.stats.totalWords || 0;
      acc.characters += game.stats.totalCharacters || 0;
    }
    return acc;
  },
  { lines: 0, words: 0, characters: 0 }
);

const doneCount = games.filter((g) => g.status === "early-access").length;
const inProgressCount = games.filter((g) => g.status === "in-progress" || g.status === "early-access").length;
const totalProjects = games.length;

// Format numbers
function formatNumber(num: number): string {
  if (num >= 1000000) {
    return `${(num / 1000000).toFixed(1)}M`;
  } else if (num >= 1000) {
    return `${(num / 1000).toFixed(1)}K`;
  }
  return num.toLocaleString("uk-UA");
}
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5" data-animate data-animate-stagger>
  <!-- Total projects -->
  <div class="glass p-6 hover:glow-accent transition-all duration-300">
    <div class="flex items-center justify-between mb-3">
      <div class="w-10 h-10 rounded-xl bg-accent/15 border border-accent/25 flex items-center justify-center">
        <svg class="w-5 h-5 text-accent-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
      </div>
      <span class="text-xs font-bold uppercase tracking-wider text-accent-light/60">Проєктів</span>
    </div>
    <p class="text-4xl font-black text-white mb-1 tabular-nums">{totalProjects}</p>
    <p class="text-xs text-surface-300">
      <span class="text-steam-green font-semibold">{doneCount} у ранньому доступі</span>,{" "}
      <span class="text-steam-blue font-semibold">{inProgressCount} у роботі</span>
    </p>
  </div>

  <!-- Lines translated -->
  {totalStats.lines > 0 && (
    <div class="glass p-6 hover:glow-accent transition-all duration-300">
      <div class="flex items-center justify-between mb-3">
        <div class="w-10 h-10 rounded-xl bg-steam-blue/15 border border-steam-blue/25 flex items-center justify-center">
          <svg class="w-5 h-5 text-steam-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <span class="text-xs font-bold uppercase tracking-wider text-steam-blue/60">Рядків</span>
      </div>
      <p class="text-4xl font-black text-white mb-1 tabular-nums">{formatNumber(totalStats.lines)}</p>
      <p class="text-xs text-surface-300">Перекладено тексту</p>
    </div>
  )}

  <!-- Words -->
  {totalStats.words > 0 && (
    <div class="glass p-6 hover:glow-accent transition-all duration-300">
      <div class="flex items-center justify-between mb-3">
        <div class="w-10 h-10 rounded-xl bg-purple-500/15 border border-purple-500/25 flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
        </div>
        <span class="text-xs font-bold uppercase tracking-wider text-purple-400/60">Слів</span>
      </div>
      <p class="text-4xl font-black text-white mb-1 tabular-nums">{formatNumber(totalStats.words)}</p>
      <p class="text-xs text-surface-300">У всіх проєктах</p>
    </div>
  )}

  <!-- Characters -->
  {totalStats.characters > 0 && (
    <div class="glass p-6 hover:glow-accent transition-all duration-300">
      <div class="flex items-center justify-between mb-3">
        <div class="w-10 h-10 rounded-xl bg-steam-green/15 border border-steam-green/25 flex items-center justify-center">
          <svg class="w-5 h-5 text-steam-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </div>
        <span class="text-xs font-bold uppercase tracking-wider text-steam-green/60">Символів</span>
      </div>
      <p class="text-4xl font-black text-white mb-1 tabular-nums">{formatNumber(totalStats.characters)}</p>
      <p class="text-xs text-surface-300">Загалом</p>
    </div>
  )}
</div>
