---
// ─── Timeline Component ────────────────────────────────────────────
// Vertical timeline showing completed game releases

import { games } from "../data/games";

// Get done games with release dates
const doneGames = games
  .filter((g) => g.status === "done" && g.releaseDate)
  .map((g) => ({
    type: 'release' as const,
    date: g.releaseDate!,
    title: g.title,
    series: g.series,
    description: g.description,
    id: g.id
  }));

// Add custom events
const customEvents = [
  {
    type: 'event' as const,
    date: "2026-02-17",
    title: "Yakuza: Like a Dragon",
    description: "Успішно завершено збір коштів на локалізацію гри. Дякуємо всім, хто підтримав проєкт!",
    id: "yakuza-lad-fundraising-complete",
    badge: "Збір завершено"
  },
  {
    type: 'event' as const,
    date: "2025-12-24",
    title: "Dispatch",
    description: "Вийшов останній епізод Dispatch. Завершено локалізацію фінальної частини гри.",
    id: "nmh-dispatch-final",
    badge: "Останній епізод"
  },
  {
    type: 'event' as const,
    date: "2025-11-26",
    title: "Judgment",
    description: "Запуск раннього доступу до української локалізації. Гра доступна для завантаження через LBK Launcher.",
    id: "judgment-early-access",
    badge: "Ранній доступ"
  }
];

// Combine and sort all events
const releases = [...doneGames, ...customEvents]
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 15); // Show last 15 events

// Format date
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString("uk-UA", {
    day: "numeric",
    month: "long",
    year: "numeric",
  });
}
---

{releases.length > 0 && (
  <div class="bg-white/[0.03] border border-white/[0.06] rounded-2xl p-6 sm:p-8" data-animate>
    <div class="mb-8">
      <h3 class="text-xl sm:text-2xl font-black text-white mb-2">
        Часова лінія релізів
      </h3>
      <p class="text-sm text-surface-300">
        Історія випуску завершених локалізацій
      </p>
    </div>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-[15px] top-0 bottom-0 w-0.5 bg-gradient-to-b from-accent via-steam-blue to-transparent" />

      <!-- Timeline items -->
      <div class="space-y-8">
        {releases.map((item, index) => (
          <div class="relative pl-12">
            <!-- Dot -->
            <div class="absolute left-0 top-1 w-8 h-8 rounded-full bg-surface-900 border-4 border-accent flex items-center justify-center">
              {item.type === 'release' ? (
                <svg class="w-3.5 h-3.5 text-accent-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              ) : (
                <svg class="w-3.5 h-3.5 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
            </div>

            <!-- Content -->
            <a
              href={item.type === 'release' ? `/projects/${item.id}` : '#'}
              class={`block group ${item.type === 'event' ? 'pointer-events-none' : ''}`}
            >
              <div class="bg-white/[0.02] border border-white/[0.06] rounded-xl p-4 hover:bg-white/[0.04] hover:border-white/[0.10] transition-all">
                <div class="flex items-start justify-between gap-3 mb-2">
                  <div class="flex items-center gap-2">
                    <h4 class="font-bold text-white group-hover:text-accent-light transition-colors line-clamp-1">
                      {item.title}
                    </h4>
                    {item.type === 'event' && 'badge' in item && (
                      <span class="inline-flex items-center px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider rounded-md bg-yellow-400/10 text-yellow-400 border border-yellow-400/20">
                        {item.badge}
                      </span>
                    )}
                  </div>
                  <span class="text-xs text-surface-400 whitespace-nowrap">
                    {formatDate(item.date)}
                  </span>
                </div>
                <p class="text-xs text-surface-300 line-clamp-2">
                  {item.description}
                </p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>
)}
