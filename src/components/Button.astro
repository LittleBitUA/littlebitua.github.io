---
// ─── Button Component ──────────────────────────────────────────
// Reusable button with multiple visual variants.

export interface Props {
  /** Button label text */
  label: string;
  /** Link URL — renders as <a> when provided */
  href?: string;
  /** Visual variant */
  variant?: "primary" | "secondary" | "ghost" | "success";
  /** Optional icon (SVG string) displayed before label */
  icon?: string;
  /** Open link in new tab */
  external?: boolean;
  /** Full width button */
  full?: boolean;
  /** Small size */
  small?: boolean;
}

const {
  label,
  href,
  variant = "primary",
  icon,
  external = false,
  full = false,
  small = false,
} = Astro.props;

const Tag = href ? "a" : "button";

const baseClasses =
  "inline-flex items-center justify-center gap-2 font-semibold rounded-xl transition-all duration-300 cursor-pointer select-none border";

const sizeClasses = small
  ? "px-4 py-2 text-sm"
  : "px-6 py-3 text-sm";

const variantClasses: Record<string, string> = {
  primary:
    "bg-accent hover:bg-accent-light text-white border-accent/50 hover:border-accent-light hover:shadow-lg hover:shadow-accent/20 active:scale-[0.97]",
  secondary:
    "bg-surface-600/60 hover:bg-surface-500/60 text-surface-100 border-white/10 hover:border-white/20 active:scale-[0.97]",
  ghost:
    "bg-transparent hover:bg-white/5 text-surface-200 border-white/10 hover:border-white/20 active:scale-[0.97]",
  success:
    "bg-steam-green/20 hover:bg-steam-green/30 text-steam-green border-steam-green/30 hover:border-steam-green/50 active:scale-[0.97]",
};

const widthClass = full ? "w-full" : "";

const linkAttrs = external
  ? { target: "_blank", rel: "noopener noreferrer" }
  : {};
---

<Tag
  href={href}
  class:list={[baseClasses, sizeClasses, variantClasses[variant], widthClass]}
  {...linkAttrs}
>
  {icon && <Fragment set:html={icon} />}
  {label}
</Tag>
