---
// ─── Recent Updates Section ────────────────────────────────────
// Shows the latest activity across all localization projects.

import { games, STATUS_LABELS } from "../data/games";

// Sort by last update date, most recent first
const recentGames = [...games]
  .filter((g) => g.lastUpdate)
  .sort((a, b) => new Date(b.lastUpdate!).getTime() - new Date(a.lastUpdate!).getTime());

/** Format date to Ukrainian locale */
function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString("uk-UA", {
    day: "numeric",
    month: "long",
    year: "numeric",
  });
}
---

<section id="updates" class="py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12" data-animate>
      <h2 class="text-3xl sm:text-4xl font-extrabold text-white mb-3">
        Останні оновлення
      </h2>
      <p class="text-surface-300 max-w-lg mx-auto">
        Хронологія найсвіжіших змін у наших проєктах
      </p>
    </div>

    <!-- Timeline -->
    <div class="relative max-w-3xl mx-auto" data-animate-stagger>
      <!-- Vertical line -->
      <div class="absolute left-6 top-0 bottom-0 w-px bg-white/10" />

      {recentGames.map((game) => (
        <div class="relative flex gap-6 pb-8 last:pb-0">
          <!-- Timeline dot -->
          <div class="relative z-10 shrink-0 w-12 flex items-start justify-center pt-1">
            <div
              class:list={[
                "w-3 h-3 rounded-full ring-4 ring-surface-900",
                game.status === "done"
                  ? "bg-steam-green"
                  : game.status === "early-access"
                    ? "bg-steam-blue"
                    : game.status === "fundraising"
                      ? "bg-purple-400"
                      : "bg-steam-gold",
              ]}
            />
          </div>

          <!-- Card -->
          <div class="glass-light p-5 flex-1 hover:border-white/15 transition-colors duration-300">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 mb-2">
              <h3 class="text-base font-bold text-white">{game.title}</h3>
              <time class="text-xs text-surface-400 shrink-0" datetime={game.lastUpdate}>
                {formatDate(game.lastUpdate!)}
              </time>
            </div>
            <p class="text-sm text-surface-300">
              {game.status === "done"
                ? "Локалізацію завершено! Тепер доступна для завантаження."
                : game.status === "early-access"
                  ? `Ранній доступ до локалізації — ${game.progress}% готово.`
                  : game.status === "fundraising"
                    ? `Збір коштів на локалізацію — ${game.progress}% зібрано.`
                    : `Переклад заплановано — ${game.progress}% завершено.`}
            </p>
            <div class="mt-2 flex items-center gap-2">
              <span
                class:list={[
                  "text-[10px] font-bold px-2 py-0.5 rounded border",
                  game.status === "done"
                    ? "bg-steam-green/20 text-steam-green border-steam-green/30"
                    : game.status === "early-access"
                      ? "bg-steam-blue/20 text-steam-blue border-steam-blue/30"
                      : game.status === "fundraising"
                        ? "bg-purple-500/20 text-purple-400 border-purple-500/30"
                        : "bg-steam-gold/20 text-steam-gold border-steam-gold/30",
                ]}
              >
                {STATUS_LABELS[game.status]}
              </span>
              <span class="text-xs text-surface-400">{game.progress}%</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
